@page "/comprar-dispositivos"
@using AppForSEII2526.Web.API
@using AppForSEII2526.Web
@inject AppForSEII2526APIClient ApiClient
@inject ComprasStateContainer CompraState
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Catálogo de Móviles</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-phone"></i> Catálogo de Dispositivos</h2>

        <div class="card border-primary mb-3" style="min-width: 250px;">
            <div class="card-header bg-primary text-white">
                <i class="bi bi-cart"></i> Mi Cesta
            </div>
            <div class="card-body text-primary">
                <div class="d-flex justify-content-between">
                    <span>Artículos:</span>
                    <strong>@CompraState.Compra.Cantidad</strong>
                </div>
                <div class="d-flex justify-content-between">
                    <span>Total estimado:</span>
                    <strong>@CompraState.TotalPrice.ToString("C2")</strong>
                </div>

                @if (CompraState.Compra.Cantidad > 0)
                {
                    <hr />
                    <button class="btn btn-success w-100" @onclick="IrAlCheckout">
                        Tramitar Pedido <i class="bi bi-arrow-right"></i>
                    </button>
                    <button class="btn btn-outline-danger btn-sm w-100 mt-2" @onclick="CompraState.EliminarCarrito">
                        Vaciar
                    </button>
                }
            </div>
        </div>
    </div>

    <div class="card mb-4 bg-light">
        <div class="card-body">
            <h5 class="card-title">Filtrar búsqueda</h5>
            <div class="row g-3">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Nombre (ej. iPhone)..."
                           @bind="filtroNombre" />
                </div>
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Color (ej. Negro)..."
                           @bind="filtroColor" />
                </div>
                <div class="col-md-4">
                    <button class="btn btn-primary w-100" @onclick="CargarDispositivos">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (dispositivos == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p class="mt-2">Cargando catálogo desde Azure...</p>
        </div>
    }
    else if (!dispositivos.Any())
    {
        <div class="alert alert-warning d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <div>No se han encontrado dispositivos con esos filtros.</div>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var movil in dispositivos)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@movil.NombreDispositivo</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@movil.Marca</h6>

                            <div class="mb-2">
                                <span class="badge bg-secondary">@movil.Color</span>
                                <span class="badge bg-info text-dark">@movil.Modelo?.NombreModelo</span>
                            </div>

                            <h3 class="text-primary text-end mt-3">
                                @movil.PrecioParaCompra.ToString("C2")
                            </h3>
                        </div>
                        <div class="card-footer bg-white border-top-0 pb-3">
                            <button class="btn btn-outline-primary w-100"
                                    @onclick="() => Agregar(movil)">
                                <i class="bi bi-cart-plus"></i> Añadir al Carrito
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    // Usamos ICollection porque es lo que devuelve el cliente generado normalmente
    private ICollection<DispositivoParaComprarDTO>? dispositivos;

    // Variables para los filtros
    private string? filtroNombre;
    private string? filtroColor;

    protected override async Task OnInitializedAsync()
    {
        // Nos suscribimos al evento para que la pantalla se actualice al añadir cosas
        CompraState.OnStateChange += StateHasChanged;

        // Carga inicial de datos
        await CargarDispositivos();
    }

    private async Task CargarDispositivos()
    {
        try
        {
            // Llamada a la API usando el cliente generado
            // Los parámetros coinciden con los de tu controlador (nombre, color)
            dispositivos = await ApiClient.GetDispositivosParaComprarAsync(filtroNombre, filtroColor);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error cargando API: {ex.Message}");
            // Si falla, dejamos la lista vacía para que no explote la UI
            dispositivos = new List<DispositivoParaComprarDTO>();
        }
    }

    private void Agregar(DispositivoParaComprarDTO dispositivo)
    {
        // Llamamos a tu contenedor para añadir el ítem
        CompraState.AñadirDispositivo(dispositivo);
    }

    private void IrAlCheckout()
    {
        // Redirige a la página de finalizar compra (la crearemos luego)
        Navigation.NavigateTo("/checkout");
    }

    // Importante: Desuscribirse para evitar fugas de memoria
    public void Dispose()
    {
        CompraState.OnStateChange -= StateHasChanged;
    }
}
