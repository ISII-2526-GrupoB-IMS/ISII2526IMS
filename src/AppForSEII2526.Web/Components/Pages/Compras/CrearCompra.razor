@page "/Compras/CrearCompra"
@using System.Net 

@using AppForSEII2526.Web.API 
@using AppForSEII2526.Web 

@inject ComprasStateContainer CompraState
@inject AppForSEII2526APIClient ApiClient
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Finalizar Compra</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-7">
            
            @if (!string.IsNullOrEmpty(mensajeError))
            {
                <div class="alert alert-danger d-flex align-items-center mb-3" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <div>@mensajeError</div>
                </div>
            }

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h4 class="mb-0"><i class="bi bi-person-lines-fill"></i> Datos de Envío</h4>
                </div>
                <div class="card-body">
                    
                    <EditForm Model="CompraState.Compra" OnValidSubmit="ProcesarPedido">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="alert alert-light text-danger" />

                        <div class="row g-3">
                            <div class="col-sm-6">
                                <label class="form-label">Nombre *</label>
                                <InputText id="InputNombre" @bind-Value="CompraState.Compra.NombreUsuario" class="form-control" placeholder="Ej. Juan" />
                                <ValidationMessage For="@(() => CompraState.Compra.NombreUsuario)" />
                            </div>

                            <div class="col-sm-6">
                                <label class="form-label">Apellidos *</label>
                                <InputText @bind-Value="CompraState.Compra.ApellidosUsuario" class="form-control" placeholder="Ej. Pérez" />
                                <ValidationMessage For="@(() => CompraState.Compra.ApellidosUsuario)" />
                            </div>

                            <div class="col-12">
                                <label class="form-label">Dirección de Entrega *</label>
                                <InputText @bind-Value="CompraState.Compra.DireccionDeEnvio" class="form-control" placeholder="Calle, número, ciudad..." />
                                <ValidationMessage For="@(() => CompraState.Compra.DireccionDeEnvio)" />
                            </div>

                            <div class="col-12">
                                <label class="form-label">Método de Pago *</label>
                                <InputSelect @bind-Value="CompraState.Compra.MetodoDePago" class="form-select">
                                    @foreach (var metodo in Enum.GetValues(typeof(TiposMetodoPago)))
                                    {
                                        <option value="@metodo">@metodo</option>
                                    }
                                </InputSelect>
                            </div>
                        </div>

                        <hr class="my-4">
                        <a href="/Compras/SelectDispositivosComprar" class="btn btn-secondary w-20 btn-lg">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>

                        <button class="btn btn-success w-100 btn-lg" type="submit" disabled="@enviando">
                            @if (enviando)
                            {
                                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                <span> Procesando...</span>
                            }
                            else
                            {
                                <span><i class="bi bi-check-circle"></i> Confirmar Compra</span>
                            }
                        </button>
                    </EditForm>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-cart3"></i> Tu Pedido</h4>
                </div>
                <div class="card-body">
                    @if (CompraState.Compra.ItemsCompra == null || !CompraState.Compra.ItemsCompra.Any())
                    {
                        <div class="alert alert-warning">Tu carrito está vacío.</div>
                    }
                    else
                    {
                         <ul class="list-group list-group-flush mb-3">
                            @foreach (var item in CompraState.Compra.ItemsCompra)
                            {
                                <li class="list-group-item px-0">
                                    <div class="d-flex justify-content-between lh-sm">
                                        <div>
                                            <h6 class="my-0">@item.Marca @item.Modelo</h6>
                                            <small class="text-muted">@item.Color (x @item.Cantidad)</small>
                                        </div>
                                        <span class="text-muted">@((item.Precio * item.Cantidad).ToString("C2"))</span>
                                    </div>
                                </li>
                            }
                        </ul>
                        <div class="d-flex justify-content-between p-3 bg-light rounded">
                            <span class="h5">Total (EUR)</span>
                            <strong class="h4">@CompraState.TotalPrice.ToString("C2")</strong>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private bool enviando = false;
    private string mensajeError = "";

    protected override void OnInitialized()
    {
        // Si no hay items, fuera
        if (CompraState.Compra.ItemsCompra == null || !CompraState.Compra.ItemsCompra.Any())
        {
            Navigation.NavigateTo("/Compras/SelectDispositivosComprar");
        }
    }

    private async Task ProcesarPedido()
    {
        // 1. Si entramos aquí, es porque los campos YA están rellenos (OnValidSubmit funciona)
        enviando = true;
        mensajeError = ""; 

        try
        {
            // 2. LLAMADA DIRECTA A LA API (Sin simulaciones raras)
            var compraRealizada = await ApiClient.CrearCompraAsync(CompraState.Compra);
            
            // 3. REDIRECCIÓN
            Navigation.NavigateTo($"/Compras/DetalleCompra/{compraRealizada.Id}");
        }
        catch (Exception ex)
        {
            // Capturamos errores reales de conexión
            mensajeError = "No se pudo procesar la compra. Inténtalo de nuevo. Detalle: " + ex.Message;
        }
        finally
        {
            enviando = false;
        }
    }
}